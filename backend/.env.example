# Server
PORT=5000

# MongoDB (use your own connection string)
DB_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# JWT (use a long random string)
JWT_SECRET=<your_jwt_secret>

# OpenWeather
WEATHER_API_KEY=<your_openweather_api_key>
BASE_URL_CITY=http://api.openweathermap.org/geo/1.0/direct
BASE_URL_WEATHER=https://api.openweathermap.org/data/2.5/weather

# Google OAuth
GOOGLE_CLIENT_ID=<your_google_client_id>
GOOGLE_CLIENT_SECRET=<your_google_client_secret>

# Frontend URL
CLIENT_URL=http://localhost:5173

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=weather-app
KAFKA_GROUP_ID=weather-group
